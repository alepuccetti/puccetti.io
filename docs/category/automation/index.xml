      <description>

















&lt;figure &gt;


  &lt;a data-fancybox=&#34;&#34; href=&#34;./bq_tf.png&#34; &gt;


  &lt;img src=&#34;./bq_tf.png&#34; alt=&#34;BigQuery &amp;#43; Terraform&#34;  &gt;
&lt;/a&gt;



&lt;/figure&gt;

&lt;div class=&#34;highlight&#34;&gt;&lt;pre style=&#34;color:#f8f8f2;background-color:#272822;-moz-tab-size:4;-o-tab-size:4;tab-size:4&#34;&gt;&lt;code class=&#34;language-terraform&#34; data-lang=&#34;terraform&#34;&gt;&lt;span style=&#34;color:#66d9ef&#34;&gt;resource&lt;/span&gt; &lt;span style=&#34;color:#e6db74&#34;&gt;&amp;#34;google_bigquery_dataset&amp;#34;&lt;/span&gt; &lt;span style=&#34;color:#e6db74&#34;&gt;&amp;#34;data_access&amp;#34;&lt;/span&gt; {
  &lt;span style=&#34;color:#a6e22e&#34;&gt;dataset_id&lt;/span&gt;                  = &lt;span style=&#34;color:#e6db74&#34;&gt;&amp;#34;data_access&amp;#34;&lt;/span&gt;
  &lt;span style=&#34;color:#a6e22e&#34;&gt;frinedly_name&lt;/span&gt;               = &lt;span style=&#34;color:#e6db74&#34;&gt;&amp;#34;data_access&amp;#34;&lt;/span&gt;
  &lt;span style=&#34;color:#a6e22e&#34;&gt;description&lt;/span&gt;                 = &lt;span style=&#34;color:#e6db74&#34;&gt;&amp;#34;Here you can access all the data you subscribed to.&amp;#34;&lt;/span&gt;
  &lt;span style=&#34;color:#a6e22e&#34;&gt;location&lt;/span&gt;                    = &lt;span style=&#34;color:#e6db74&#34;&gt;&amp;#34;EU&amp;#34;&lt;/span&gt;

  &lt;span style=&#34;color:#a6e22e&#34;&gt;labels&lt;/span&gt; = {
    &lt;span style=&#34;color:#a6e22e&#34;&gt;env&lt;/span&gt; = &lt;span style=&#34;color:#e6db74&#34;&gt;&amp;#34;production&amp;#34;&lt;/span&gt;
  }&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;
&lt;script type=&#34;application/javascript&#34; src=&#34;https://gist.github.com/alepuccetti/f606ffc6ac767056de9e147a11cb310d.js&#34;&gt;&lt;/script&gt;

&lt;div class=&#34;highlight&#34;&gt;&lt;pre style=&#34;color:#f8f8f2;background-color:#272822;-moz-tab-size:4;-o-tab-size:4;tab-size:4&#34;&gt;&lt;code class=&#34;language-terraform&#34; data-lang=&#34;terraform&#34;&gt;&lt;span style=&#34;color:#66d9ef&#34;&gt;resource&lt;/span&gt; &lt;span style=&#34;color:#e6db74&#34;&gt;&amp;#34;google_bigquery_table&amp;#34;&lt;/span&gt; &lt;span style=&#34;color:#e6db74&#34;&gt;&amp;#34;view_name&amp;#34;&lt;/span&gt; {
  &lt;span style=&#34;color:#a6e22e&#34;&gt;project&lt;/span&gt;     = &lt;span style=&#34;color:#a6e22e&#34;&gt;google_bigquery_dataset&lt;/span&gt;.data&lt;span style=&#34;color:#960050;background-color:#1e0010&#34;&gt;_&lt;/span&gt;&lt;span style=&#34;color:#a6e22e&#34;&gt;access&lt;/span&gt;.&lt;span style=&#34;color:#a6e22e&#34;&gt;project&lt;/span&gt;
  &lt;span style=&#34;color:#a6e22e&#34;&gt;dataset_id&lt;/span&gt;  = &lt;span style=&#34;color:#a6e22e&#34;&gt;google_bigquery_dataset&lt;/span&gt;.data&lt;span style=&#34;color:#960050;background-color:#1e0010&#34;&gt;_&lt;/span&gt;&lt;span style=&#34;color:#a6e22e&#34;&gt;access&lt;/span&gt;.data&lt;span style=&#34;color:#a6e22e&#34;&gt;set_id&lt;/span&gt;
  &lt;span style=&#34;color:#a6e22e&#34;&gt;table_id&lt;/span&gt;    = &lt;span style=&#34;color:#e6db74&#34;&gt;&amp;#34;view_name&amp;#34;&lt;/span&gt;

  &lt;span style=&#34;color:#a6e22e&#34;&gt;view&lt;/span&gt; {
    &lt;span style=&#34;color:#a6e22e&#34;&gt;query&lt;/span&gt;          = &lt;span style=&#34;color:#f92672&#34;&gt;&amp;lt;&amp;lt;EOF&lt;/span&gt;&lt;span style=&#34;color:#e6db74&#34;&gt;
&lt;/span&gt;&lt;span style=&#34;color:#e6db74&#34;&gt;SELECT
&lt;/span&gt;&lt;span style=&#34;color:#e6db74&#34;&gt;  *
&lt;/span&gt;&lt;span style=&#34;color:#e6db74&#34;&gt;FROM `source_project_id.source_dataset_id.source_table`
&lt;/span&gt;&lt;span style=&#34;color:#e6db74&#34;&gt;WHERE ...
&lt;/span&gt;&lt;span style=&#34;color:#e6db74&#34;&gt;&lt;/span&gt;&lt;span style=&#34;color:#f92672&#34;&gt;EOF&lt;/span&gt;
    &lt;span style=&#34;color:#a6e22e&#34;&gt;use_legacy_sql&lt;/span&gt; = &lt;span style=&#34;color:#66d9ef&#34;&gt;false&lt;/span&gt;
  }

  &lt;span style=&#34;color:#a6e22e&#34;&gt;depends_on&lt;/span&gt; = [
    &lt;span style=&#34;color:#a6e22e&#34;&gt;google_bigquery_dataset&lt;/span&gt;.data&lt;span style=&#34;color:#960050;background-color:#1e0010&#34;&gt;_&lt;/span&gt;&lt;span style=&#34;color:#a6e22e&#34;&gt;access&lt;/span&gt;
  ]
}&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;
&lt;div class=&#34;highlight&#34;&gt;&lt;pre style=&#34;color:#f8f8f2;background-color:#272822;-moz-tab-size:4;-o-tab-size:4;tab-size:4&#34;&gt;&lt;code class=&#34;language-terraform&#34; data-lang=&#34;terraform&#34;&gt;&lt;span style=&#34;color:#66d9ef&#34;&gt;resource&lt;/span&gt; &lt;span style=&#34;color:#e6db74&#34;&gt;&amp;#34;google_bigquery_dataset_access&amp;#34;&lt;/span&gt; &lt;span style=&#34;color:#e6db74&#34;&gt;&amp;#34;view_authorization&amp;#34;&lt;/span&gt; {
  &lt;span style=&#34;color:#a6e22e&#34;&gt;project&lt;/span&gt;    = &lt;span style=&#34;color:#e6db74&#34;&gt;&amp;#34;source_project_id&amp;#34;&lt;/span&gt;
  &lt;span style=&#34;color:#a6e22e&#34;&gt;dataset_id&lt;/span&gt; = &lt;span style=&#34;color:#e6db74&#34;&gt;&amp;#34;source_dataset_id&amp;#34;&lt;/span&gt;
  &lt;span style=&#34;color:#a6e22e&#34;&gt;view&lt;/span&gt; {
    &lt;span style=&#34;color:#a6e22e&#34;&gt;project_id&lt;/span&gt; = &lt;span style=&#34;color:#a6e22e&#34;&gt;google_bigquery_table&lt;/span&gt;.&lt;span style=&#34;color:#a6e22e&#34;&gt;view_name&lt;/span&gt;.&lt;span style=&#34;color:#a6e22e&#34;&gt;project&lt;/span&gt;
    &lt;span style=&#34;color:#a6e22e&#34;&gt;dataset_id&lt;/span&gt; = &lt;span style=&#34;color:#a6e22e&#34;&gt;google_bigquery_table&lt;/span&gt;.&lt;span style=&#34;color:#a6e22e&#34;&gt;view_name&lt;/span&gt;.data&lt;span style=&#34;color:#a6e22e&#34;&gt;set_id&lt;/span&gt;
    &lt;span style=&#34;color:#a6e22e&#34;&gt;table_id&lt;/span&gt;   = &lt;span style=&#34;color:#a6e22e&#34;&gt;google_bigquery_table&lt;/span&gt;.&lt;span style=&#34;color:#a6e22e&#34;&gt;view_name&lt;/span&gt;.&lt;span style=&#34;color:#a6e22e&#34;&gt;table_id&lt;/span&gt;
  }

  &lt;span style=&#34;color:#a6e22e&#34;&gt;depends_on&lt;/span&gt; = [
    &lt;span style=&#34;color:#a6e22e&#34;&gt;google_bigquery_dataset&lt;/span&gt;.data&lt;span style=&#34;color:#960050;background-color:#1e0010&#34;&gt;_&lt;/span&gt;&lt;span style=&#34;color:#a6e22e&#34;&gt;access&lt;/span&gt;
  ]
}&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;
</description>
